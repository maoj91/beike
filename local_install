sudo apt-get install postgresql-9.3 postgresql-client-9.3 postgresql-contrib-9.3 postgresql-doc-9.3 postgresql-server-dev-9.3 pgadmin3

# psycopg
sudo apt-get build-dep python-psycopg2
sudo pip install psycopg2

# geo
wget http://download.osgeo.org/geos/geos-3.3.8.tar.bz2
tar xjf geos-3.3.8.tar.bz2
cd geos-3.3.8
./configure
make
sudo make install
LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/usr/local/lib"

# mathfilters
sudo pip install django-mathfilters


sudo apt-get install libxml2-dev libproj-dev libgdal-dev


# https://docs.djangoproject.com/en/dev/ref/contrib/gis/install/postgis/
wget http://download.osgeo.org/postgis/source/postgis-2.1.0.tar.gz
tar xzf postgis-2.1.0.tar.gz
cd postgis-2.1.0
./configure
make
sudo make install
cd ..


# others
sudo pip install validate_email
sudo pip install boto
sudo pip install pygeocoder

# http://stackoverflow.com/questions/18664074/getting-error-peer-authentication-failed-for-user-postgres-when-trying-to-ge

sudo gedit /etc/postgresql/9.3/main/pg_hba.conf
sudo /etc/init.d/postgresql restart

sudo -u postgres createdb beike_db
sudo -u postgres psql -d beike_db






python manage.py syncdb
python manage.py runserver
